<%= render 'layouts/nav' %>

<div class="container">
	<div class="row">
<!-- User info start -->
		<%= render 'users/leftCol' %>
<!-- User info end -->

<!-- [start] Books 一覧 -->
		<div class="col-md-8">
			<div class="row">
			  	<h2>Books</h2>
			</div>
			<div class="row">
				<label class="col-md-2">Image</label>
				<label class="col-md-3">Title</label>
				<label class="col-md-7">Opinion</label>
			</div>

			<% @books.each do |book| %>
				<div class="row">
					<%= attachment_image_tag book.user, :my_image, class: "col-md-2 img-circle pull-left", fallback: "no_image.jpg" %>
					<p class="col-md-3"><%= book.title %></p>
					<p class="col-md-7"><%= book.opinion %></p>
				</div>
			<% end %>
<!-- [end] Books 一覧 -->

	</div>
</div>
