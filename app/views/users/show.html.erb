<%= render 'layouts/nav' %>

<div class="container">
	<div class="row">
<!-- User info start -->
		<%= render 'users/leftCol', users: @user, user: @user %>
<!-- User info end -->

		<div class="col-md-8">
			<div class="row">
			  	<h2>Books</h2>
			</div>
			<div class="row">
				<label class="col-md-2">Image</label>
				<label class="col-md-3">Title</label>
				<label class="col-md-7">Opinion</label>
			</div>

			<% @books.each do |book| %>
			<div class="row">
				<p class="col-md-2">Image1</p>
				<%= link_to book.title, book_path(book.id), class: "book_#{book.id} col-md-3" %>
				<p class="col-md-7"><%= book.opinion %></p>
			</div>
			<% end %>

		</div>

	</div>
</div>


