<%= render 'layouts/nav' %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1 class="row">User info</h1>
			<%= form_for(@user) do |f| %>
				<%= render 'layouts/error_messages', model: f.object %>
				<%= f.label :name, "Name" %>
				<div class="row">
					<%= f.text_field :name, class: "name col-md-12" %>
				</div>
				<%= f.label :my_image, "Image" %>
				<div class="row">
					<%= f.attachment_field :my_image, class: "user_image" %>
				</div>
				<%= f.label :introduction, "Introduction" %>
				<div class="row">
					<%= f.text_area :introduction, class: "introduction col-md-12" %>
				</div>
				<div class="row">
					<%= f.submit "Update User", class: "btn btn-primary col-md-12" %>
				</div>
			<% end %>

		</div>
	</div>
</div>
