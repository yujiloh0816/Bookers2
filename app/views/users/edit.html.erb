<%= render 'layouts/nav' %>

<h1>User info</h1>


<%= form_for(@user) do |f| %>

	<%= f.text_field :name, class: "name" %>

	<%= f.attachment_field :my_image, class: "user_image" %>

	<%= f.text_area :introduction, class: "introduction" %>

	<%= f.submit "Update User" %>

<% end %>

<p>Find me in app/views/users/edit.html.erb</p>
