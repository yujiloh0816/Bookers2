<div class="col-md-4">
	<div class="row">
	    <h2>User info</h2>

		<div class="row">
			<%= attachment_image_tag @user, :my_image, class: "col-md-5 img-circle pull-left", fallback: "no_image.jpg" %>
		</div>

		<div class="row">
			<label class="col-md-5 border-dark">name</label>
			<p class="col-md-7"><%= @user.name %></p>
		</div>
		<div class="row">
			<label class="col-md-5">introduction</label>
			<p class="col-md-7"><%= @user.introduction %></p>
		</div>
		<div class="row">
			<%= link_to edit_user_path(@user.id), class: "btn btn-default col-md-10 edit_user_#{@user.id}" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
	  	</div>
	</div>

	<div class="row">
    	<h2>New book</h2>
	   	<%= form_for(@book) do |f| %>

		   	<%= render 'layouts/error_messages', model: f.object %>
	     	<div class="row">
				<label for="title">Title</label>
			</div>
			<div class="row">
				<%= f.text_field :title, class: "col-md-10 book_title" %>
			</div>

			<div class="row">
		     	<label for="opinion" class="">Opinion</label>
		    </div>
		    <div class="row">
				<%= f.text_area :opinion, class: "col-md-10 mb-4 book_body" %>
			</div>
			<div class="row">
				<input type="submit" value="Create Book" class="btn btn-default col-md-10">
			</div>
		<% end %>
	</div>
</div>


